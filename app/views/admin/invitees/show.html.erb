<div class="max-w-3xl mx-auto">
  <!-- Invitee Header -->
  <div class="pb-5 border-b border-gray-200 sm:flex sm:items-center sm:justify-between">
    <div>
      <div class="flex items-center">
        <%= link_to admin_test_path(@test), class: "text-sm text-blue-600 hover:text-blue-900" do %>
          <span class="inline-flex items-center">
            <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Test
          </span>
        <% end %>
      </div>
      <h1 class="mt-2 text-2xl font-bold text-gray-900"><%= @invitee.name %></h1>
      <p class="mt-1 text-sm text-gray-500"><%= @invitee.email %></p>
    </div>
    <div class="mt-4 flex sm:mt-0 sm:ml-4">
      <%= link_to "Edit", edit_admin_test_invitee_path(@test, @invitee), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>

  <!-- Test Progress -->
  <div class="mt-8">
    <div class="overflow-hidden bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-medium text-gray-900">Test Progress</h3>
            <dl class="mt-4 grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="mt-1">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case @invitee.status
                        when 'pending' then 'bg-yellow-100 text-yellow-800'
                        when 'in_progress' then 'bg-blue-100 text-blue-800'
                        when 'completed' then 'bg-green-100 text-green-800'
                        when 'expired' then 'bg-gray-100 text-gray-800'
                        end %>">
                    <%= @invitee.status.titleize %>
                  </span>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Score</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <% if @invitee.score %>
                    <div class="flex items-center">
                      <span class="text-2xl font-bold <%= @invitee.score >= @test.passing_score ? 'text-green-600' : 'text-red-600' %>">
                        <%= @invitee.score %>%
                      </span>
                      <span class="ml-2 text-sm text-gray-500">
                        (<%= @invitee.score >= @test.passing_score ? 'Passed' : 'Failed' %>)
                      </span>
                    </div>
                  <% else %>
                    <span class="text-gray-500">Not completed</span>
                  <% end %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Started At</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @invitee.started_at ? l(@invitee.started_at, format: :long) : 'Not started' %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Completed At</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @invitee.completed_at ? l(@invitee.completed_at, format: :long) : 'Not completed' %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Time Taken</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <% if @invitee.started_at && @invitee.completed_at %>
                    <%= distance_of_time_in_words(@invitee.started_at, @invitee.completed_at) %>
                  <% else %>
                    -
                  <% end %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Expires At</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= l(@invitee.expires_at, format: :long) %>
                </dd>
              </div>
            </dl>
          </div>

          <!-- Admin Notes -->
          <div>
            <h3 class="text-lg font-medium text-gray-900">Admin Notes</h3>
            <div class="mt-4">
              <% if @invitee.notes.present? %>
                <p class="text-sm text-gray-600"><%= simple_format(@invitee.notes) %></p>
              <% else %>
                <p class="text-sm text-gray-500 italic">No notes added.</p>
              <% end %>
            </div>
          </div>

          <!-- Test Answers -->
          <% if @invitee.completed? %>
            <div>
              <h3 class="text-lg font-medium text-gray-900">Test Answers</h3>
              <div class="mt-4 space-y-6">
                <% @invitee.answers.each_with_index do |answer, index| %>
                  <div class="bg-white border border-gray-200 rounded-md p-4">
                    <div class="space-y-4">
                      <div>
                        <h4 class="text-sm font-medium text-gray-900">Question <%= index + 1 %></h4>
                        <p class="mt-1 text-gray-600"><%= answer.question.question_text %></p>
                      </div>

                      <div class="space-y-2">
                        <% %w[A B C D].each do |option| %>
                          <div class="flex items-start">
                            <div class="flex items-center h-5">
                              <% is_selected = answer.selected_answer == option %>
                              <% is_correct = answer.question.correct_answer == option %>
                              <div class="w-4 h-4 rounded-full <%= is_selected && is_correct ? 'bg-green-500' : (is_selected ? 'bg-red-500' : (is_correct ? 'bg-green-200' : 'bg-gray-200')) %>"></div>
                            </div>
                            <div class="ml-3">
                              <p class="text-sm text-gray-700">
                                <span class="font-medium">Option <%= option %>:</span>
                                <%= answer.question.send("option_#{option.downcase}") %>
                              </p>
                            </div>
                          </div>
                        <% end %>
                      </div>

                      <div>
                        <p class="text-sm">
                          <% if answer.correct? %>
                            <span class="text-green-600 font-medium">Correct Answer</span>
                          <% else %>
                            <span class="text-red-600 font-medium">
                              Incorrect Answer - Selected Option <%= answer.selected_answer %>, 
                              Correct was Option <%= answer.question.correct_answer %>
                            </span>
                          <% end %>
                        </p>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="mt-8">
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium leading-6 text-red-800">Danger Zone</h3>
        <div class="mt-2 max-w-xl text-sm text-gray-500">
          <p>Once you delete an invitee, there is no going back. Please be certain.</p>
        </div>
        <div class="mt-5">
          <%= button_to admin_test_invitee_path(@test, @invitee), 
              method: :delete,
              data: { confirm: "Are you sure you want to delete this invitee? This action cannot be undone." },
              class: "inline-flex items-center justify-center px-4 py-2 border border-transparent font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:text-sm" do %>
            Delete Invitee
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 